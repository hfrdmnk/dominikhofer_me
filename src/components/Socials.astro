---
import { default as cn } from 'classnames';
import SimpleLinkButton from './Button.astro';
const { isFooter } = Astro.props;
---

<div
	class={cn(
		'flex items-center font-mono',
		isFooter ? 'gap-4 text-sm' : 'gap-2'
	)}>
	<SimpleLinkButton
		href="https://mastodon.design/@dominik"
		target="_blank"
		rel="me"
		isSimple={isFooter}
		icon="mastodon-logo"
	/>
	<SimpleLinkButton
		href="https://github.com/hfrdmnk"
		target="_blank"
		rel="me"
		isSimple={isFooter}
		icon="github-logo"
	/>
	<SimpleLinkButton
		href="/hi"
		target="_blank"
		rel="noopener"
		isSimple={isFooter}
		icon="envelope"
	/>
	<SimpleLinkButton
		href="/rss"
		target="_blank"
		rel="noopener"
		isSimple={isFooter}
		icon="rss"
	/>
	<SimpleLinkButton
		href="https://hoferdo.link/newsletter"
		target="_blank"
		rel="noopener"
		isSimple={isFooter}
		icon="mailbox">
		{!isFooter && <span>Personal newsletter</span>}
	</SimpleLinkButton>
	{!isFooter && <div class="h-[1px] bg-gray-200 w-full" />}
</div>
