---
import { Icon } from 'astro-icon/components';

const { title, icon } = Astro.props;
---

<section class="relative border rounded-lg p-6 px-4 sm:px-6">
	<div
		class="flex gap-2 items-center p-2 bg-white absolute top-0 -translate-y-1/2 left-2 sm:left-4">
		<Icon
			name=`tabler:${icon}`
			class="w-5 h-5 flex-shrink-0 sm:self-center text-gray-500"
		/>
		<h2 class="h5 leading-none">{title}</h2>
	</div>
	<slot />
</section>
