---
import BaseHead from './BaseHead.astro';
import Footer from '../components/Footer.astro';
import Navbar from '../components/Navbar.astro';

let { title, description, image, redirect } = Astro.props;
---

<!doctype html>
<html lang="en">
	<head>
		<BaseHead
			title={title}
			description={description}
			image={image}
			redirect={redirect}
		/>
	</head>
	<body>
		<Navbar />
		<div class="mt-36 mb-24">
			<slot name="header" />
		</div>
		<main>
			<slot />
		</main>
		<Footer />
	</body>
</html>
